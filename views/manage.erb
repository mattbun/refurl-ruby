<html>
    <head>
        <link rel="stylesheet" href="components/bootstrap/dist/css/bootstrap.min.css">
        <script type="text/javascript" src="components/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script>

            $(getLinks);

            function deleteLink(key){
                $.ajax({
                    url: '/api/delete/' + key,
                    type: 'DELETE',
                    success: function(result) {
                        getLinks();
                    }
                });
            }

            function getLinks(){
                $.ajax({
                    url: "/api/list",
                    type: "GET",
                    success: function(data) {
                        var tableHTML = "";
                        var result = JSON.parse(data);
                        $.each(result, function (index, value){
                            tableHTML += getRecordHTML(value.key, value.name, value.path);
                        });
                        $("#linktable").html(tableHTML);
                        
                    }
                });
            }

            function getRecordHTML(key, name, path){
                var result = "";
                
                result += "<tr>\n";
                result += "<td>" + name + "</td>\n";
                result += "<td><a href='" + key + "'>" + key + "</a></td>\n";
                result += "<td>" + path + "</td>\n";
                result += "<td><button type='button' class='btn btn-xs btn-danger' onclick='deleteLink(\"" + key + "\")'>Delete</button></td>\n";
                result += "</tr>\n";

                return result;
            }
        </script>
    </head>

    <body>

        <div class="container" style="width:750px; height:100%">
            <div class="navbar navbar-default">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">That</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="that-add">Add</a>
                        </li>
                        <li class="active">
                            <a href="that-manage">Manage</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <!-- Someday? <li><a href="#">Settings</a></li> -->
                    </ul>
                </div>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width:200px">Name</th>
                        <th style="width:100px">Key</th>
                        <th>Path</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="linktable">
                </tbody>
            </table>
        </div>
    </body>
</html>
